<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Portal</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>bootstrap</param-value>
	</context-param>

	<servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
		<param-value>/resources</param-value>
	</context-param>

	<ejb-ref>
		<ejb-ref-name>ejb/CityEJB</ejb-ref-name>
		<remote>com.smartThings.haflete.remoteServices.CityRemote</remote>
		<mapped-name>corbaname:iiop:localhostIP:3700#ejb/CityEJB</mapped-name>
	</ejb-ref>


	<ejb-ref>
		<ejb-ref-name>ejb/SellerEJB</ejb-ref-name>
		<remote>com.smartThings.haflete.remoteServices.SellerRemote</remote>
		<mapped-name>corbaname:iiop:localhostIP:3700#ejb/SellerEJB</mapped-name>
	</ejb-ref>
</web-app>